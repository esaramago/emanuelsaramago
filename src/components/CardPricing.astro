---

import Card from './Card.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

interface Props {
	title: string
	subTitle: string
  price: number
}


const {
	title,
	subTitle,
  price
} = Astro.props as Props
---


<Card
  class="card-pricing"
  title={ title }
  subTitle={ subTitle }
>
  <div class="card-pricing__content">
    <slot></slot>
  </div>
  <div class="card-pricing__footer">
    <span>desde <strong class="u-font-bold">{ price } â‚¬</strong></span>

    <a href="mailto:emanuelsaramago@gmail.com?subject=Hi!&body=Hi, I'm contacting to..." class="c-button c-button--sm">
      { t('contactme') }
    </a>
  </div>
</Card>

<style scoped>
.card-pricing {
  display: flex;
  flex-direction: column;
  gap: var(--sl-spacing-medium);
}
.card-pricing__content {
  padding-block: var(--sl-spacing-medium);
  border-block: 1px solid var(--sl-color-neutral-300);
}
.card-pricing__footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: var(--sl-spacing-medium);
  font-size: var(--sl-font-size-x-large);
}
</style>