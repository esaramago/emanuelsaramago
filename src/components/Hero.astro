<style scoped>
.hero {
  display: flex;
  flex-direction: column;
  gap: var(--gap-lg);
  text-align: center;
  align-items: center;
  max-width: 85rem;
  padding: 0 var(--gap);
  margin: 0 auto var(--gap-xl);
  color: #FFF;
  fill: #FFF;
}
.hero__1 {
  font-size: clamp(6rem, 10rem, 10rem);
}
.hero__2 {
