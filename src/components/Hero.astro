---
import Social from '../components/Social.astro'

import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

---

<div class="hero">
  <div class="hero__container l-container">
    <h1 class="hero__1">Ol√°!</h1>
    <h2>
      <div class="hero__2">{ t('hero.heading1') }</div>
      <div class="hero__3">{ t('hero.heading2') }</div>
    </h2>
    <p>{ t('hero.text1') }<br>{ t('hero.text2') }</p>
    <div>
      <a href="mailto:emanuelsaramago@gmail.com?subject=Hi!&body=Hi, I'm contacting to..." class="c-button c-button--light">
        <svg width="21" height="17" viewBox="0 0 21 17" xmlns="http://www.w3.org/2000/svg">
          <path d="M20.3988 2.78271C20.3988 1.68271 19.4988 0.782715 18.3988 0.782715H2.3988C1.2988 0.782715 0.398804 1.68271 0.398804 2.78271V14.7827C0.398804 15.8827 1.2988 16.7827 2.3988 16.7827H18.3988C19.4988 16.7827 20.3988 15.8827 20.3988 14.7827V2.78271ZM18.3988 2.78271L10.3988 7.78271L2.3988 2.78271H18.3988ZM18.3988 14.7827H2.3988V4.78271L10.3988 9.78271L18.3988 4.78271V14.7827Z"/>
        </svg>
        { t('contactme') }
      </a>
    </div>
    <div class="social">
      <Social />
    </div>
  </div>
</div>

<style scoped>
.hero {
  display: flex;
  align-items: center;
  position: relative;
  min-height: 90vh;
  box-sizing: border-box;
  padding-block-start: 8rem;
  padding-block-end: var(--sl-spacing-large);
  text-align: center;
  background-color: var(--sl-color-primary-500);
  color: #FFF;
  fill: #FFF;
}
.hero::before {
  content: "";
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  background: url(../img/background.jpg) center center no-repeat;
  background-size: cover;
  opacity: .05;
}
.hero__container {
  position: relative;
  max-width: 85rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--sl-spacing-large);
}
.hero__1 {
  font-size: clamp(6rem, 10rem, 10rem);
}
.hero__2 {
  font-size: clamp(2.5rem, 4vw, 3rem);
  font-weight: normal;
  line-height: 1.4;
}
.hero__3 {
  font-size: clamp(4rem, 8vw, 7rem);
  font-weight: normal;
  line-height: 1;
}
p {
  max-width: 75rem;
  font-size: 1.8rem;
}

@media (min-width: 768px) {
  .social {
    display: none;
  }
}
@media (max-width: 767px) {
  .hero__container {
    gap: var(--sl-spacing-medium);
  }
}
</style>
</style>